# vim:filetype=msmtp

# These values set in /etc/msmtmprc
defaults

port 587
protocol smtp
auth on
tls on
tls_trust_file /var/lib/ca-certificates/ca-bundle.pem

logfile ~/.msmtp.log
syslog LOG_MAIL

account personal
host smtp.gmail.com
from chrisbcoutinho@gmail.com
user chrisbcoutinho@gmail.com
passwordeval pass show Mail/Gmail-offlineimap


account work
host smtp.office365.com
from c.coutinho@redstack.nl
user ccoutinho@a-hak.nl
# AuthMechs PLAIN
passwordeval pass show Mail/Office365


# Use personal account as default to send mail
account default : personal

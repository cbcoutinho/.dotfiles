# vim: filetype=muttrc

## Account Settings -----------------------------------
# Default inbox

set folder           = ~/.mail/gmail						# mailbox location
set header_cache     = ~/.config/mutt/.gmail/cache/headers	# where to store headers
set message_cachedir = ~/.config/mutt/.gmail/cache/bodies	# where to store bodies
set certificate_file = ~/.config/mutt/.gmail/certificates	# where to store certs
set signature        = ~/.config/mutt/.gmail/sig			# my signature file

# Alternate email addresses
#alternates chris@example.com

# Mailboxes to show in the sidebar
unmailboxes *
mailboxes +INBOX \
			+Sent \
			+Drafts \
			+Important \
			+Mailing\ Lists \
			+Mailing\ Lists.Cinemacephale \
			+Mailing\ Lists.DragonFlyBSD \
			+Mailing\ Lists.FreeBSD \
			+Mailing\ Lists.Github \
			+Mailing\ Lists.GnuPG \
			+Mailing\ Lists.OpenSUSE \
			+Mailing\ Lists.Pass \
			+Mailing\ Lists.Python-dev \
			+Mailing\ Lists.Rotaract \
			+Categories \
			+Categories.Promotions \
			+Categories.Social \
			+Categories.Updates \
			#+Archive \
			#+Categories.Forums \

set from = "chrisbcoutinho@gmail.com"
set sendmail = "/usr/bin/msmtp -a personal"
set sendmail_wait = 0

# Don't record sent mail in 'sent' box - let Google/Microsoft handle it
unset record

set spoolfile = "+INBOX"
set mbox = "+Archive"
set postponed = "+Drafts"

set crypt_use_gpgme = yes

# Automatically sign all outgoing messages
set crypt_autosign=no

# Automatically verify the sig of a message when opened
set crypt_verify_sig=yes

# Automatically sign replies to messages which are signed
# Automatically encrypt replies to messages which are encrypted
# Automatically sign replies to messages which are encrypted
set crypt_replysign=yes
set crypt_replyencrypt=yes
set crypt_replysignencrypted=yes

# Sync email
macro index O "<shell-escape>offlineimap -a ChrisCoutinho -s<enter>"           "run offlineimap to sync all mail"
macro index o "<shell-escape>offlineimap -a ChrisCoutinho -s -qf INBOX<enter>" "run offlineimap to sync inbox"

[user]
	name = Chris Coutinho
	email = chrisbcoutinho@gmail.com
	signingKey = C31AD5CE0DB152360CBB78D3ACC5190D2F6F160F
[commit]
	verbose = true
	gpgsign = true

[core]
	excludesfile = /home/chris/.gitignore_global
	pager = less -x1,5
	# This sets `git {diff,show} tabs as 4 spaces
	#	https://stackoverflow.com/a/10584237

[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[pretty]
	# From https://github.com/nicksp/dotfiles
	custom = "%C(magenta)%h%C(red)%d %C(yellow)%ar %C(green)%s %C(yellow)(%an)"
	#                     │        │            │            │             └─ author name
	#                     │        │            │            └─ message
	#                     │        │            └─ date (relative)
	#                     │        └─ decorations (branch, heads or tags)
	#                     └─ hash (abbreviated)
[format]
	pretty = custom
[diff]
	algorithm = patience

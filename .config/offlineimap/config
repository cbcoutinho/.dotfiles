# vim: filetype=conf

[general]
ui = TTY.TTYUI
#ui = syslog
#ui = Curses.Blinkenlights
accounts = ChrisCoutinho

# NOTE: This is a python2 file
pythonfile=~/.config/offlineimap/offlineimap.py
fsync = False

[Account ChrisCoutinho]
localrepository = ChrisCoutinho-Local
remoterepository = ChrisCoutinho-Remote
synclabels = yes
postsynchook = ~/.config/offlineimap/postsync.sh

[Repository ChrisCoutinho-Local]
type = GmailMaildir
localfolders = ~/.mail/chrisbcoutinho@gmail.com
nametrans = lambda folder: {'Drafts':  '[Gmail]/Drafts',
							'Sent':    '[Gmail]/Sent Mail',
							'Flagged': '[Gmail]/Starred',
							'Trash':   '[Gmail]/Trash',
							'Archive': '[Gmail]/All Mail',
							'Important': '[Gmail]/Important',
							'Mailing List/Github': 'Mailing List.Github',
							'Mailing List/Pass': 'Mailing List.Pass',
							'Mailing List/Cinemacephale': 'Mailing List.Cinemacephale',
                            }.get(folder, folder)

[Repository ChrisCoutinho-Remote]
maxconnections = 4
type = Gmail
remoteuser = chrisbcoutinho@gmail.com
remotepasseval = get_pass(account="Gmail")
realdelete = no
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
nametrans = lambda folder: {'[Gmail]/Drafts':    'Drafts',
							'[Gmail]/Sent Mail': 'Sent',
							'[Gmail]/Starred':   'Flagged',
							'[Gmail]/Trash':     'Trash',
							'[Gmail]/All Mail':  'Archive',
							'[Gmail]/Important': 'Important',
							'Mailing List.Github': 'Mailing List/Github',
							'Mailing List.Pass': 'Mailing List/Pass',
							'Mailing List.Cinemacephale': 'Mailing List/Cinemacephale',
                            }.get(folder, folder)
folderfilter = lambda folder: folder not in ['[Gmail]/Trash',
											 '[Gmail]/Spam',
											 '[Gmail]/Bin',
                                             ]



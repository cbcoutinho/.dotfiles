# vim: filetype=muttrc

## Account Settings -----------------------------------
# Default inbox

set folder           = ~/.mail/office365						# mailbox location
set header_cache     = ~/.config/mutt/.office365/cache/headers	# where to store headers
set message_cachedir = ~/.config/mutt/.office365/cache/bodies	# where to store bodies
set certificate_file = ~/.config/mutt/.office365/certificates	# where to store certs
set signature        = ~/.config/mutt/.office365/sig			# my signature file

# Alternate email addresses
#alternates chris@example.com

# Mailboxes to show in the sidebar
unmailboxes *
mailboxes +INBOX \
			+Archive \
			+Sent \
			+Drafts \
			+Clutter \
			+Newsletters \
			+Newsletters.Basecamp \
			+Newsletters.Dakota \
			+Newsletters.ParaView \
			+Newsletters.RED\ News \

set from = "ccoutinho@a-hak.nl"
set sendmail = "/usr/bin/msmtp -a work"
set sendmail_wait = 0

set spoolfile = "+INBOX"
set mbox = "+Archive"
set postponed = "+Drafts"
